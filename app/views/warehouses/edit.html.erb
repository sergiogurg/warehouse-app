<%= form_with(model: @warehouse) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= @warehouse.errors.full_messages_for(:name)[0] if @warehouse.errors.full_messages_for(:name).any? %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
    
    <%= @warehouse.errors.full_messages_for(:description)[0] if @warehouse.errors.full_messages_for(:description).any? %>
  </div>
  <div>
    <%= f.label :code %>
    <%= f.text_field :code %>
    
    <%= @warehouse.errors.full_messages_for(:code)[0] if @warehouse.errors.full_messages_for(:code).any? %>
  </div>
  <div>
    <%= f.label :address %>
    <%= f.text_field :address %>
    
    <%= @warehouse.errors.full_messages_for(:address)[0] if @warehouse.errors.full_messages_for(:address).any? %>
  </div>
  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
    
    <%= @warehouse.errors.full_messages_for(:city)[0] if @warehouse.errors.full_messages_for(:city).any? %>
  </div>
  <div>
    <%= f.label :state %>
    <%= f.text_field :state %>
    
    <%= @warehouse.errors.full_messages_for(:state)[0] if @warehouse.errors.full_messages_for(:state).any? %>
  </div>
  <div>
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code %>
    
    <%= @warehouse.errors.full_messages_for(:postal_code)[0] if @warehouse.errors.full_messages_for(:postal_code).any? %>
  </div>
  <div>
    <%= f.label :area %>
    <%= f.number_field :area %>
    
    <%= @warehouse.errors.full_messages_for(:area)[0] if @warehouse.errors.full_messages_for(:area).any? %>
  </div>
  <div>
    <%= f.submit 'Enviar' %>
  </div>
<% end %>