<h2>Fornecedores</h2>

<%= link_to('Cadastrar Fornecedor', new_supplier_path) %>

<% if @suppliers.any? %>
  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Localização</th>
      </tr>
    </thead>
    <tbody>
      <% @suppliers.each do |s| %>
        <tr>
          <td><%= s.brand_name %></td>
          <td> <%= s.city %> - <%= s.state %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Não existem fornecedores cadastrados.</p>
<% end %>

<%= link_to('Voltar', root_path) %>