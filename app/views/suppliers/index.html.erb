<h2>Fornecedores</h2>

<%= link_to('Cadastrar Fornecedor', new_supplier_path) %>

<% if @suppliers.any? %>
  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Localização</th>
      </tr>
    </thead>
    <tbody>
      <% @suppliers.each do |supplier| %>
        <tr>
          <td><%= link_to supplier.brand_name, supplier_path(supplier.id) %></td>
          <td> <%= supplier.city %> - <%= supplier.state %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Não existem fornecedores cadastrados.</p>
<% end %>
<br>
<%= link_to('Voltar', root_path) %>